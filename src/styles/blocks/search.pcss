.search {
  width: 39.5%;
  border: 1px solid rgb(138, 138, 138);
  border-radius: 3px;
}

.search__field {
  display: flex;
  box-sizing: border-box;
}


.search__field-input {
  padding: 8px 0px;
  width: 91%;
  border: none;
  font-size: 18px;
  font-weight: 400;
}

.search__field-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 9%;
  background: #fff;
  border: none;
}

.search__field-pic {
  height: 18px;
  width: 18px;
}